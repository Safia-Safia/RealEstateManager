<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.CreateProperty">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/type_of_property_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintBottom_toTopOf="@id/price_layout"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/textview_property_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:text="Type of property : "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/type_of_property_layout" />

            <Spinner
                android:id="@+id/type_of_property_spinner"
                android:layout_width="22dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/textview_property_type"
                app:layout_constraintTop_toTopOf="@id/type_of_property_layout" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/price_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/type_of_property_layout">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/house_price_image"
                android:layout_width="41dp"
                android:layout_height="44dp"
                android:src="@drawable/ic_house_price"
                app:layout_constraintEnd_toStartOf="@+id/edittext_house_price"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edittext_house_price"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:hint="00"
                android:inputType="number"
                app:layout_constraintStart_toEndOf="@+id/house_price_image"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:text="Prix du bien"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edittext_house_price" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/house_surface_image"
                android:layout_width="48dp"
                android:layout_height="44dp"
                android:src="@drawable/ic_house_m2"
                app:layout_constraintEnd_toStartOf="@id/house_nbr_of_piece_image"
                app:layout_constraintHorizontal_bias="0.397"
                app:layout_constraintStart_toEndOf="@+id/edittext_house_price"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edittext_surface"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:hint="00"
                android:inputType="number"
                app:layout_constraintStart_toEndOf="@+id/house_surface_image"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textview_surface"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:text="Surface en m²"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@id/house_surface_image"
                app:layout_constraintTop_toBottomOf="@id/edittext_surface" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/house_nbr_of_piece_image"
                android:layout_width="48dp"
                android:layout_height="44dp"
                android:src="@drawable/ic_nbr_of_pieces"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/edittext_surface"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edittext_nbr_of_piece"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:hint="00"
                android:inputType="number"
                app:layout_constraintStart_toEndOf="@+id/house_nbr_of_piece_image"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:text="Nbr de pièces"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@id/house_nbr_of_piece_image"
                app:layout_constraintTop_toBottomOf="@id/edittext_nbr_of_piece" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view_1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="#605D5D"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/price_layout" />

        <TextView
            android:id="@+id/text_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_1" />

        <EditText
            android:id="@+id/edit_description"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/rectangle_border"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:textAlignment="gravity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_description" />

        <View
            android:id="@+id/view_2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="#605D5D"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_property_image" />

        <LinearLayout
            android:id="@+id/layout_property_image"
            android:layout_width="418dp"
            android:layout_height="112dp"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_description">

            <ImageButton
                android:id="@+id/selectImageButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/search_border"
                android:text="Sélectionner des images"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_description">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal"
                    tools:listitem="@layout/create_property_picture_recyclerview_content" />


            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>