<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/properties_list_fragment">

    <fragment
        android:id="@+id/properties_list_fragment"
        android:name="com.openclassrooms.realestatemanager.controller.propertiesListFragment"
        android:label="propertiesListFragment">
        <action
            android:id="@+id/show_properties_detail"
            app:destination="@id/properties_detail_fragment" />
    </fragment>
    <fragment
        android:id="@+id/properties_detail_fragment"
        android:name="com.openclassrooms.realestatemanager.controller.propertiesDetailFragment"
        android:label="properties_detail"
        tools:layout="@layout/fragment_properties_detail">
        <argument
            android:name="item_id"
            android:defaultValue=""
            app:argType="string" />
    </fragment>
</navigation>