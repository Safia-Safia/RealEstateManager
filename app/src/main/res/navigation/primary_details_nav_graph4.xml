<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/property_list_fragment">

    <fragment
        android:id="@+id/property_list_fragment"
        android:name="com.openclassrooms.realestatemanager.controller.databinding.PropertyListFragment"
        android:label="PropertyListFragment">
        <action
            android:id="@+id/show_property_detail"
            app:destination="@id/property_detail_fragment" />
    </fragment>
    <fragment
        android:id="@+id/property_detail_fragment"
        android:name="com.openclassrooms.realestatemanager.controller.databinding.PropertyDetailFragment"
        android:label="property_detail"
        tools:layout="@layout/fragment_property_detail">
        <argument
            android:name="item_id"
            android:defaultValue=""
            app:argType="string" />
    </fragment>
</navigation>